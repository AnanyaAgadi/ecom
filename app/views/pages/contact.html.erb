
<h1>Contact Us</h1>

<%= flash[:notice] %>
  <%= form_with(url:"/pages/thank_you", method: "post", local:
    true) do |form| %>
     <div class="container">
        <div class="form-group form-st">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder:
            "Enter Name" %>
        </div>
        <div class="form-group form-st">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder:
             "Enter Email" %>
        </div>
        <div class="form-group form-st">
          <%= form.label :message %><%= form.text_area :message, class: "form-control", placeholder:
             "Enter Message", rows: 5 %>
        </div>
        <div class="form-group form-st">
          <%= form.submit "Send", class: "form_label fsub" %> 
        </div>
        
       <% end %>
      </div>
