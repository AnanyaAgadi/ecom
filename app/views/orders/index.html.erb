<div class="container">
<div class="row">
  <% @orders.each do |order| %>
   <% if order.product %>
    <div class="col-sm">
      <h1>Order # <%= order.id %>:
      <%= link_to order.product.name, order %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
   <% end %>
  <% end %>
</div>
</div>